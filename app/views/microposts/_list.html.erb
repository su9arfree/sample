<h2> Micropost (<%= @microposts.count %>)</h2>
<table>
	<%= will_paginate %>

	<% @microposts.each do |p| %>
	<tr style="border : 1px solid black;">
		<td><%=p.created_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
		<td><%= p.user.name %></td>
		<td><%= p.content %></td>
        <td><%= link_to 'Show', "#" %></td>

        <td><%= link_to 'Edit', "#" %></td>

        <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	</tr>

<% end %>

</table>
	<%= will_paginate %>
